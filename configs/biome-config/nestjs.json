{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "rules": {
      "complexity": {
        "noStaticOnlyClass": "off",
        "noUselessConstructor": "off"
      },
      "style": {
        "useImportType": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "off"
      }
    }
  }
}
