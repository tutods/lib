{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "files": {
    "includes": ["**", "!**/.vinxi", "!**/.output"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noReactSpecificProps": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "**/app.config.ts",
        "**/app.tsx",
        "**/entry-server.tsx",
        "**/entry-client.tsx",
        "**/routes/**/*.tsx"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
