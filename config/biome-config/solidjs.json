{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["./base.json"],
  "linter": {
    "rules": {
      "suspicious": {
        "noReactSpecificProps": "error"
      }
    }
  },
  "overrides": [
    {
      "include": ["app.config.ts", "app.tsx", "entry-server.tsx", "entry-client.tsx", "routes/*.tsx"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
